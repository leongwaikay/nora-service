{
    "version": "0.2.0",
    "configurations": [
    {
        "type": "node",
        "request": "attach",
        "name": "Heroku",
        "address": "localhost",
        "port": 9229,
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/app",
        "skipFiles": [
            "<node_internals>/**"
        ]
    },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "args": [
                "./src/index.ts",
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register/type-check",
            ],
            "env": {
                "TS_NODE_FILES": "true",
            },
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Current File",
            "args": [
                "${file}",
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register/type-check",
            ],
            "env": {
                "TS_NODE_FILES": "true",
            },
            "sourceMaps": true,
            "cwd": "${workspaceFolder}",
            "protocol": "inspector"
        }
    ]
}